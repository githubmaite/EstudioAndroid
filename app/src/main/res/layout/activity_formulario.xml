<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5F8F8"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context=".vista.Formulario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Datos Persona"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Id" />

        <EditText
            android:id="@+id/edtxid"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp" />
    </LinearLayout>
    "

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Correo" />

        <EditText
            android:id="@+id/edtxcorreo"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp" />
    </LinearLayout>
    "

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="Nombre" />

        <EditText
            android:id="@+id/edtxnombre"
            android:layout_width="263dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    "

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Telefono" />

        <EditText
            android:id="@+id/edtxtelefono"
            android:layout_width="263dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    "


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fec Nac" />

        <EditText
            android:id="@+id/edtxFecNac"
            android:layout_width="263dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    "

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pais" />

        <EditText
            android:id="@+id/edtxpais"
            android:layout_width="263dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Comentario" />

        <EditText
            android:id="@+id/edtxcomentario"
            android:layout_width="263dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnvolver"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:onClick="volver"
            android:text="Volver" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:onClick="guardar"
            android:text="Guardar" />
    </LinearLayout>
</LinearLayout>